# Production Environment Configuration for TrustDiner Backend

# Database (AWS RDS)
DATABASE_URL=postgresql://username:password@your-rds-instance.amazonaws.com:5432/trustdiner_prod

# Redis Cache (AWS ElastiCache)
REDIS_URL=redis://your-elasticache-instance.amazonaws.com:6379

# JWT Authentication
JWT_SECRET=your-super-secure-production-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Google Places API
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-production-aws-access-key
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key

# S3 Image Storage
S3_IMAGES_BUCKET=trustdiner-production-images
CLOUDFRONT_IMAGES_DOMAIN=images.trustdiner.com

# Image Service Configuration (Production)
FORCE_S3=true
USE_SIGNED_IMAGE_URLS=false
SIGNED_URL_TTL=3600

# Production Settings
NODE_ENV=production
PORT=3001

# Security
CORS_ORIGIN=https://app.trustdiner.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

